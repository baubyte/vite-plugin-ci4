{
  "name": "@baubyte/vite-plugin-ci4",
  "version": "2.0.0",
  "description": "Vite Plugin for CodeIgniter 4 integration.",
  "keywords": [
    "vite",
    "ci4",
    "codeigniter",
    "inertia",
    "plugin"
  ],
  "homepage": "https://github.com/baubyte/vite-plugin-ci4",
  "repository": {
    "type": "git",
    "url": "https://github.com/baubyte/vite-plugin-ci4"
  },
  "license": "MIT",
  "author": {
    "name": "Krishna Gujjjar",
    "email": "krishnagujjjar@gmail.com",
    "url": "https://fabithub.com"
  },
  "contributors": [
    {
      "name": "Baubyte",
      "url": "https://github.com/baubyte"
    }
  ],
  "type": "module",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./resolvers": {
      "types": "./resolvers/pageComponent.d.ts",
      "import": "./resolvers/pageComponent.js",
      "default": "./resolvers/pageComponent.js"
    }
  },
  "files": [
    "*.js",
    "*.d.ts",
    "*.html",
    "config",
    "handlers",
    "plugins",
    "resolvers",
    "types",
    "utils"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --ext .ts ./src ./tests",
    "format": "biome format --write .",
    "format:check": "biome check --write .",
    "prebuild": "rm -rf dist",
    "build": "tsc --emitDeclarationOnly --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "postbuild": "node build.config.js",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vite": "^6.0.0 || ^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.15.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "esbuild": "^0.25.2",
    "html-minifier-terser": "^7.2.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "picocolors": "^1.1.1",
    "semver": "^7.7.3",
    "vite-plugin-full-reload": "^1.2.0"
  }
}
